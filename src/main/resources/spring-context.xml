<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="userDAO" class="tablegame.dao.map.UserDAOImpl">
    </bean>
    <bean name="gameDAO" class="tablegame.dao.map.GameDAOImpl">
    </bean>
    <bean name="userService" class="tablegame.service.UserServiceImpl" autowire="constructor">
        <constructor-arg index="0" ref="userDAO"/>
    </bean>
    <bean name="gameService" class="tablegame.service.GameServiceImpl" autowire="constructor">
        <constructor-arg index="0" ref="gameDAO"/>
    </bean>
</beans>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Igor Nemykin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>

        <createTable tableName="user"
                     remarks="Таблица зарегистрированных пользователей">
            <column name="id" type="uuid"
                    remarks="Идентификатор записи">
                <constraints primaryKey="true"
                             primaryKeyName="user_pk"
                             nullable="false"/>
            </column>
            <column name="username" type="varchar(255)" remarks="Наименование краткое">
                <constraints nullable="false"/>
            </column>
            <column name="user_status" type="varchar(255)" remarks="Статус пользователя в системе"/>
            <column name="password" type="varchar(255)" remarks="Пароль пользователя"/>

            <column name="role" type="varchar(255)" remarks="Роль пользователя в системе"/>
            <column name="game_id" type="uuid" remarks="Игра">
                <constraints foreignKeyName="user_fk"
                             referencedTableName="game"
                             referencedColumnNames="id"
                             nullable="false"/>
            </column>

        </createTable>
        <comment>Создание таблицы пользователя</comment>
    </changeSet>

    <changeSet id="2" author="Igor Nemykin">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="user" indexName="user_username_idx"/>
            </not>
        </preConditions>
        <createIndex tableName="user" indexName="user_username_idx">
            <column name="username"/>
        </createIndex>
        <comment>Индекс для поиска по имени пользователя</comment>
    </changeSet>

</databaseChangeLog>